<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="login_btn_style" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/twenty_dp_margin</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/login_button_background</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="forgot_password_login_label_style">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="add_teacher_input_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawablePadding">@dimen/fiftenn_dp</item>
        <item name="android:layout_margin">@dimen/five_dp</item>
        <item name="android:background">@drawable/add_teacher_input_style</item>
    </style>

    <style name="add_teacher_text_input_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/five_dp</item>
    </style>

    <style name="add_teacher_screen_btn_style" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/ten_dp</item>
        <item name="android:layout_marginBottom">@dimen/twenty_five_dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/add_teacher_btn_background</item>
    </style>
    <style name="add_student_input_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawablePadding">@dimen/fiftenn_dp</item>
        <item name="android:layout_margin">@dimen/five_dp</item>
        <item name="android:background">@drawable/add_teacher_input_style</item>
    </style>
    <style name="add_student_text_input_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/five_dp</item>
    </style>
    <style name="add_student_screen_btn_style"
        parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/ten_dp</item>
        <item name="android:layout_marginBottom">@dimen/twenty_five_dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/add_student_btn_background</item>
    </style>
    <style name="add_assignment_input_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawablePadding">@dimen/fiftenn_dp</item>
        <item name="android:layout_margin">@dimen/five_dp</item>
        <item name="android:background">@drawable/add_teacher_input_style</item>
    </style>
    <style name="add_assignment_text_input_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/five_dp</item>
    </style>

    <style name="add_assignment_screen_btn_style"
        parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/twenty_five_dp</item>
        <item name="android:layout_marginBottom">@dimen/fourty_dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/add_assignment_btn_background</item>
    </style>
</resources>

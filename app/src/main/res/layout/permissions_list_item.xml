<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/five_dp"
    android:layout_margin="@dimen/five_dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/permission_list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five_dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five_dp"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight=".5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textSize="12dp"
                android:layout_weight=".4"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/permission_list_recycle_item_label_permission_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="XX-XX-XXXX"
                android:textSize="12dp"
                android:layout_weight=".6"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Time:"
                android:textSize="12dp"
                android:gravity="right"
                android:layout_weight=".4"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/permission_list_recycle_item_label_permission_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="AAA555"
                android:layout_marginLeft="@dimen/five_dp"
                android:textSize="12dp"
                android:layout_weight=".6"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/five_dp"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_weight=".5">
                <TextView
                    android:id="@+id/permission_list_recycle_item_label_student_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Student Name"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_weight=".6"
                    android:textColor="#2A92B3"/>
                <TextView
                    android:id="@+id/permission_list_recycle_item_label_class"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="4th"
                    android:layout_marginRight="@dimen/five_dp"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:background="@drawable/light_gray_background"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_weight=".4"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:weightSum="1">
                <TextView
                    android:id="@+id/permission_list_recycle_item_label_permission_duration"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="1 hr"
                    android:textSize="12dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:background="@drawable/light_gray_background"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:layout_weight=".4"
                    android:textColor="#2263BC"/>
                <TextView
                    android:id="@+id/permission_list_recycle_item_label_status"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="AAA555"
                    android:layout_marginRight="@dimen/five_dp"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:background="@drawable/light_orange_background"
                    android:layout_gravity="right"
                    android:textSize="12dp"
                    android:layout_weight=".6"
                    android:gravity="center_horizontal"
                    android:textColor="#FF0500"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/permission_list_recycle_item_label_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp"
            android:text="Permission Related Data"
            android:maxLines="2"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
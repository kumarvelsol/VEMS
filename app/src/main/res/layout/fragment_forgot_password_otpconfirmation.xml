<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ForgotPAsswordOTPConfirmationFragment">

    <!-- TODO: Update blank fragment layout -->
   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardCornerRadius="@dimen/twenty_dp_margin"
       android:layout_margin="@dimen/twenty_dp_margin">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <in.aabhasjindal.otptextview.OtpTextView
               android:id="@+id/otp_view"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               app:bar_enabled="true"
               app:bar_height="2dp"
               app:length="6"
               app:otp_text_size="24dp"/>
           <Button
               android:id="@+id/submit_btn_forgot_password_confirm_screen"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/login_btn_style"
               android:layout_gravity="right"
               android:layout_marginRight="@dimen/twenty_dp_margin"
               android:text="@string/forgot_password_otp_confirmation_sbmit_btn_txt"/>
       </LinearLayout>
   </android.support.v7.widget.CardView>

</FrameLayout>
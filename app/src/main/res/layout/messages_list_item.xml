<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/five_dp"
    app:cardCornerRadius="@dimen/five_dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/five_dp">
        <LinearLayout
            android:id="@+id/message_list_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/fiftenn_dp"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/messages_list_item_label_message_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date of Join:"
                        android:textSize="12dp"
                        android:gravity="left"
                        android:layout_weight=".4"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/messages_list_item_label_message_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="XX-XX-XXXX"
                        android:textSize="12dp"
                        android:gravity="right"
                        android:layout_weight=".6"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:weightSum="1">
                <TextView
                    android:id="@+id/messages_list_item_label_message_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Name"
                    android:textSize="16dp"
                    android:gravity="left"
                    android:layout_weight=".7"
                    android:textStyle="bold"
                    android:textColor="#EE4093"/>
                <TextView
                    android:id="@+id/messages_list_item_label_message_person_class"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="4th Class"
                    android:background="@drawable/light_gray_background"
                    android:layout_gravity="right"
                    android:textSize="12dp"
                    android:gravity="center_horizontal"
                    android:layout_weight=".3"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

            </LinearLayout>
            <TextView
                android:id="@+id/messages_list_item_label_message_content"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/five_dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Some Text Data"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</android.support.v7.widget.CardView>
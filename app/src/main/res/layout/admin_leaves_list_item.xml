<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/five_dp"
    app:cardCornerRadius="@dimen/five_dp">
    <LinearLayout
        android:id="@+id/leave_list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/admin_leaves_list_image_student_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/sample_image_teacher"
            android:layout_weight=".15"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/ten_dp"
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_weight=".5">
            <TextView
                android:id="@+id/admin_leaves_list_label_student_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:fontFamily="@font/roboto"
                android:textSize="18sp"
                android:layout_gravity="left"
                android:layout_margin="@dimen/ten_dp"
                android:textColor="#2263BC"
                android:gravity="left|center"
                android:text="Student Name"/>
            <TextView
                android:id="@+id/admin_leaves_list_label_class"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:fontFamily="@font/roboto"
                android:textSize="13sp"
                android:layout_gravity="left"
                android:layout_margin="@dimen/ten_dp"
                android:background="@drawable/light_gray_background"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Nursery"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/ten_dp"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight=".35">
            <TextView
                android:id="@+id/admin_leaves_list_label_date_days"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".6"
                android:fontFamily="@font/roboto"
                android:textSize="11sp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/ten_dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Date- Days"/>
            <TextView
                android:id="@+id/admin_leaves_list_label_status"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".4"
                android:fontFamily="@font/roboto"
                android:textSize="13sp"
                android:layout_margin="@dimen/ten_dp"
                android:layout_gravity="center"
                android:background="@drawable/light_orange_background"
                android:textColor="#FF0500"
                android:gravity="center"
                android:text="Rejected"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/five_dp"
    app:cardCornerRadius="2dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/five_dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_margin="@dimen/five_dp">
            <TextView
                android:id="@+id/student_teacher_attendance_list_label_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:text="Student Name"
                android:fontFamily="@font/roboto"
                android:textColor="#2A92B3"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight=".75"/>
            <TextView
                android:id="@+id/student_teacher_attendance_list_label_attendance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:text="Present"
                android:background="@drawable/light_green_background"
                android:gravity="center"
                android:fontFamily="@font/roboto"
                android:textColor="@color/dark_green_color"
                android:textSize="10sp"
                android:layout_weight=".25"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/five_dp"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="@dimen/five_dp"
                android:weightSum="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="In-Time"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:textSize="10sp"
                    />
                <TextView
                    android:id="@+id/student_teacher_attendance_list_label_in_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="In-Time"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="@dimen/five_dp"
                android:weightSum="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="Out-Time"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:textSize="10sp"
                    />
                <TextView
                    android:id="@+id/student_teacher_attendance_list_label_outime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="In-Time"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="@dimen/five_dp"
                android:weightSum="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="Duration"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:textSize="10sp"
                    />
                <TextView
                    android:id="@+id/student_teacher_attendance_list_label_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="In-Time"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
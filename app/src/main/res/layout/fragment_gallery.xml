<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.adminfragments.GalleryFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->
        <GridView
            android:id="@+id/galleryGridView"
            android:layout_width="match_parent"
            android:numColumns="2"
            android:visibility="gone"
            android:layout_margin="@dimen/five_dp"
            android:horizontalSpacing="@dimen/five_dp"
            android:verticalSpacing="@dimen/five_dp"
            android:stretchMode="columnWidth"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/gallery_no_images_popup_layout"
            android:layout_width="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/admin_nav_menu_activity_gallery"
                tools:ignore="ContentDescription" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Gallery Activity Upto Now"
                android:textSize="25sp"
                android:textColor="#a3a3a3"
                android:fontFamily="serif"
                tools:targetApi="jelly_bean" />
        </LinearLayout>
        <!--<include-->
            <!--android:visibility="gone"-->
            <!--android:id="@+id/data_loading_screen_layout"-->
            <!--layout="@layout/data_loading_layout"/>-->
    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/five_dp"
    android:layout_margin="@dimen/five_dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/assignments_recycle_list_label_teacher_assignment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Assignemt 1"
            android:layout_margin="@dimen/ten_dp"
            android:textColor="@color/black"
            android:textSize="12dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/ten_dp"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:text="Subject: "
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/assignments_recycle_list_label_teacher_subject_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:text="Subject"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:textColor="#FF625F"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:text="Class: "
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/assignments_recycle_list_label_teacher_class_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:text="Class Name"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_margin="@dimen/ten_dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:text="Teacher Name: "
                android:layout_gravity="right"
                android:gravity="left|center"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/admin_nav_menu_profile"/>
            <TextView
                android:id="@+id/assignments_recycle_list_label_teacher_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:text="Teacher Name"
                android:layout_gravity="right"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textColor="@color/black" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>